<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projectp4.studio.com.gerenciador_universitario.SituGeral"
    android:background="#007db6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Dados"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ab1"
        android:text="AB1: 00.00"
        android:layout_below="@+id/tvCh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Materia"
        android:id="@+id/nomeMat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AB2: 00.00"
        android:id="@+id/ab2"
        android:layout_alignTop="@+id/ab1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reavaliação: 00.00"
        android:id="@+id/reav"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/ab1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Final: 00.00"
        android:id="@+id/pfinal"
        android:layout_alignTop="@+id/reav"
        android:layout_alignRight="@+id/ab2"
        android:layout_alignEnd="@+id/ab2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Faltas Atuais: 000"
        android:id="@+id/tvFaltasA"
        android:layout_below="@+id/Dados"
        android:layout_alignLeft="@+id/tvMedia"
        android:layout_alignStart="@+id/tvMedia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Faltas restantes: 000"
        android:id="@+id/tvFaltasR"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/tvFaltasA"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Carga Horária: 00h"
        android:id="@+id/tvCh"
        android:layout_below="@+id/nomeMat"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONCEITO: Matriculado"
        android:id="@+id/tvConceito"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/tvStatusF"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status de Faltas: Aceitável"
        android:id="@+id/tvStatusF"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/tvFaltasR"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Média: 00.00"
        android:id="@+id/tvMedia"
        android:layout_below="@+id/reav"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:textSize="30dp" />

</RelativeLayout>
</ScrollView>